<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.BookMapper">  <!-- 接口 -->
    <!-- 接口 -->
    <!-- public List selectAllbooks(){} -->
    <select id="selectAllBooks" resultType="Book">
        <!-- Book是pojo下的类-->
        select * from t_book1
    </select>

    <select id ="selectOneBook" resultType = "Book">
        select * from t_book1 where name =#{arg0} and author =#{arg1}
        <!-- 或者 select * from t_book1 where name =#{param1} and author =#{param2}-->

    </select>

    <select id ="selectOneBook2" resultType = "Book">
        select * from t_book1 where name =#{name} and author =#{author}
        <!-- 或者 select * from t_book1 where name =#{param1} and author =#{param2}-->

    </select>

    <select id ="selectOneBook3" resultType = "Book">
        select * from t_book1 where name =#{param1} and author =#{param2.author}
        <!-- 或者 select * from t_book1 where name =#{param1} param2要调什么就选什么}-->

    </select>

    <insert id="insertBook" >
        insert into t_book1 (id,name,author,price) values (#{id},#{name},#{author},#{price})

    </insert>

    <delete id="deleteBook" >
        delete  from t_book1 where id = #{id}

    </delete>




</mapper>

        <!-- BookMapper要扫描到Mybatis里去-->